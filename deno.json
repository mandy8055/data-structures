{
  "name": "@mskr/data-structures",
  "version": "1.4.0",
  "exports": "./src/mod.ts",
  "license": "MIT",
  "publish": {
    "include": [
      "src",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/**/*.test.ts",
      ".github",
      ".vscode",
      "deno.json",
      "docs",
      "website"
    ]
  },
  "tasks": {
    "test": "deno test",
    "coverage": "deno test --coverage=coverage && deno coverage --html coverage && open coverage/html/index.html",
    "check": "deno check src/**/*.ts scripts/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check-jsdoc": "deno doc --lint src/**/*.ts",
    "verify": "deno task check && deno task fmt --check && deno task lint && deno task check-jsdoc",
    "build:npm": "deno run -A scripts/build_npm.ts"
  },
  "fmt": {
    "include": [
      "src/",
      "tests/"
    ],
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true
  },
  "lint": {
    "include": [
      "src/",
      "tests/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.6"
  }
}
